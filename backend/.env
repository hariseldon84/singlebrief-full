# SingleBrief Backend Environment Variables
# Copy this file to .env and fill in the values

# Basic Settings
PROJECT_NAME=SingleBrief
VERSION=0.1.0
ENVIRONMENT=development
SECRET_KEY=dev-secret-key-for-development
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production

# Database - Using SQLite for development
DATABASE_URL=sqlite:///./singlebrief.db
POSTGRES_USER=singlebrief
POSTGRES_PASSWORD=singlebrief_dev
POSTGRES_DB=singlebrief
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# AI/LLM APIs
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Vector Database
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key

# External Integrations
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Monitoring
SENTRY_DSN=your-sentry-dsn