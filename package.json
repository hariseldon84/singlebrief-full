{
  "name": "singlebrief",
  "version": "1.0.0",
  "description": "AI-powered intelligence operative for managers and team leads",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "npm run build --workspace=frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "start": "npm run start --workspace=frontend",
    "start:frontend": "npm run start --workspace=frontend",
    "start:backend": "cd backend && python -m uvicorn main:app --host 0.0.0.0 --port 8000",
    "lint": "npm run lint --workspace=frontend && cd backend && python -m ruff check .",
    "lint:frontend": "npm run lint --workspace=frontend",
    "lint:backend": "cd backend && python -m ruff check .",
    "test": "npm run test --workspace=frontend && cd backend && python -m pytest",
    "test:frontend": "npm run test --workspace=frontend",
    "test:backend": "cd backend && python -m pytest",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm install && cd backend && pip install -r requirements.txt",
    "setup:frontend": "npm install --workspace=frontend",
    "setup:backend": "cd backend && pip install -r requirements.txt",
    "migrate": "cd backend && alembic upgrade head",
    "migrate:down": "cd backend && alembic downgrade -1",
    "migrate:reset": "cd backend && alembic downgrade base && alembic upgrade head"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/singlebrief.git"
  },
  "keywords": [
    "AI",
    "intelligence",
    "management",
    "team-collaboration",
    "automation"
  ],
  "author": "SingleBrief Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "python": ">=3.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}